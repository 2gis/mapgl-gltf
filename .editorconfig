# EditorConfig: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,jsx,tsx,json,html,css,md,yml,vsh,fsh}]
charset = utf-8

[*.{js,ts,jsx,tsx,json,html,css,vsh,fsh}]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2
