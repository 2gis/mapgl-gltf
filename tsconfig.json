{
  "compilerOptions": {
    "types": ["jest", "node", "sinon"],
    "lib": ["dom", "es6"],
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist/",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": ["project.d.ts", "modules.d.ts", "src/**/*.ts"]
}
